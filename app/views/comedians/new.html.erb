<h2> Add a Comedian</h2>

<%= form_for @comedian do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Enter name" %>
    </br>
        <%= f.label :age%>
        <%= f.number_field :age, placeholder: "Enter age" %>
    </br>
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "Enter city" %>
    </br>
        <%= f.submit 'Submit', class: "btn" %>
    <% end  %>
